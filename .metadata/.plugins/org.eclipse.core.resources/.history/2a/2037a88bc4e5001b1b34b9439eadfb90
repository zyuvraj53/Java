package telusko.Threads;

class Hi{
	
	public void show() throws InterruptedException {
		
		for(int i = 0; i < 5; i++) {
			
			System.out.println("Hi"); 
			Thread.sleep(500);
		}
	}
}

class Hello{
	
	public void show() throws InterruptedException {
		
		for(int i = 0; i < 5; i++) {
			
			System.out.println("Hello"); 
			Thread.sleep(500);
		}
	}
}

public class ThreadDemo {

	public static void main(String[] args) {

		Hi hi = new Hi();
		Hello hello = new Hello();
		hi.show();
		hello.show();

	}

}
